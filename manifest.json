{
  "manifest_version": 3,
  "name": "OPENUGC",
  "version": "0.6.10",
  "description": "AI驱动的一站式内容管理平台",
  "homepage_url": "https://chat.openugc.com",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "alarms",
    "tabs",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {},
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openugc.com/*"
      ],
      "js": [
        "main_content.js"
      ]
    },
    {
      "matches": [
        "https://chat.openugc.com/*"
      ],
      "js": [
        "main_web.js"
      ],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "3rd_content.js"
      ],
      "exclude_matches": [
        "https://chat.openugc.com/*"
      ]
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "3rd_web.js"
      ],
      "run_at": "document_start",
      "world": "MAIN",
      "exclude_matches": [
        "https://chat.openugc.com/*"
      ]
    }
  ]
}